

help:
	@echo "--------------------------------------------------";
	@echo "┬ ┬┌─┐┬  ┌─┐  ┌┬┐┌─┐┬┌─┌─┐┌─┐┬┬  ┌─┐";
	@echo "├─┤├┤ │  ├─┘  │││├─┤├┴┐├┤ ├┤ ││  ├┤ ";
	@echo "┴ ┴└─┘┴─┘┴    ┴ ┴┴ ┴┴ ┴└─┘└  ┴┴─┘└─┘";
	@echo "--------------------------------------------------";
	@echo 'watch        - run dev mode'
	@echo 'prod         - Pull and add asset to prod environment';
	@echo "--------------------------------------------------";
	@echo "--------------------------------------------------";

install: 
	@echo "--------------------------------------------------";
	@echo "┌┬┐┌─┐┬  ┬┬  ┌─┐┌─┐┌┬┐┌─┐┌┐┌┌┬┐";
	@echo " ││├┤ └┐┌┘│  │ │├─┘│││├┤ │││ │ ";
	@echo "─┴┘└─┘ └┘ ┴─┘└─┘┴  ┴ ┴└─┘┘└┘ ┴ ";
	@echo "--------------------------------------------------";
	@echo "INSTALL MODE";
	@echo "--------------------------------------------------";

	mysql -h 127.0.0.1 -u root -p local_db && mysql -u root -p local_db < ./sql/local_db.sql

watch: 
	@echo "--------------------------------------------------";
	@echo "┌┬┐┌─┐┬  ┬┬  ┌─┐┌─┐┌┬┐┌─┐┌┐┌┌┬┐";
	@echo " ││├┤ └┐┌┘│  │ │├─┘│││├┤ │││ │ ";
	@echo "─┴┘└─┘ └┘ ┴─┘└─┘┴  ┴ ┴└─┘┘└┘ ┴ ";
	@echo "--------------------------------------------------";
	@echo "DEV MODE";
	@echo "--------------------------------------------------";

	npm run watch

prod: 
	@echo "--------------------------------------------------";
	@echo "┌─┐┬─┐┌─┐┌┬┐┬ ┬┌─┐┌┬┐┬┌─┐┌┐┌";
	@echo "├─┘├┬┘│ │ │││ ││   │ ││ ││││";
	@echo "┴  ┴└─└─┘─┴┘└─┘└─┘ ┴ ┴└─┘┘└┘";
	@echo "--------------------------------------------------";
	@echo "PROD MODE";
	@echo "--------------------------------------------------";

	git pull && \
	npm install && \
	npm run prod